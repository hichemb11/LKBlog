<%- include ("partials/header") -%>

<section id="blogPost">
    <div class="container-fluid fullpost">

        <!-- <div class="col-md-2">
           
        </div> -->


            <h1 class="postheader"> <%=title%> </h1>

            <div class="metapic row">
                <div class="col-lg-10">
                    <img src="/uploads/<%=image%>" class="blogPostImage img-fluid" alt="post_image">
                </div>
                <div class="metainfo col-lg-2" id="metainfo">
                    <div class="publicado">
                    <h3 class="metah3">Publicado</h3>
                    <p class="pgen">22/10/2020</p>
                </div>
                    <hr class="metainfo-hr">
                    <div class="escritor">
                    <h3 class="metah3">Escritor</h3>
                    <p class="pgen"><%=writer%> </p>
                </div>
                    <hr class="metainfo-hr">

                    <div class="compartir">
                        <h3 class="metah3">Compartir</h3>

                        <div class="compartir-socmed">
                            <i class="compartir-socmed-icon fab fa-facebook-f"></i>
                            <i class="compartir-socmed-icon fab fa-linkedin-in"></i>
                            <i class="compartir-socmed-icon fab fa-twitter"></i>
                        </div>
                    </div>
                </div>

                

                
            </div>

            <p class="postContentp"><%- content %> </p>

            <div class="compartir-mobile">
                <h3 class="metah3">Compartir</h3>

                <div class="compartir-socmed">
                    <i class="compartir-socmed-icon-mobile fab fa-facebook-f"></i>
                    <i class="compartir-socmed-icon-mobile fab fa-linkedin-in"></i>
                    <i class="compartir-socmed-icon-mobile fab fa-twitter"></i>
                </div>
            </div>
        </div>
</section>


</div>
</section>

<%- include ("partials/footer") -%>